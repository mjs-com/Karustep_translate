<Window x:Class="VoiceRecorder.SystemPromptEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="システムプロンプト編集" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- タイトル用 -->
            <RowDefinition Height="Auto"/> <!-- プロンプト選択ComboBox用 -->
            <RowDefinition Height="*"/>    <!-- TabControl用 -->
            <RowDefinition Height="Auto"/> <!-- ボタンパネル用 -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="システムプロンプト編集"
                   FontSize="20" FontWeight="Bold"
                   Margin="10" HorizontalAlignment="Center"/>
        
        <ComboBox x:Name="PromptComboBox" Grid.Row="1" Margin="10" SelectionChanged="PromptComboBox_SelectionChanged" DisplayMemberPath="FileNameWithoutExtension"/>

        <TabControl Grid.Row="2" Margin="10">
            <TabItem Header="入力フォーマット（特に覚えてほしいこと）">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="InputFormatTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="5"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="factセクション">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="FactTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="5"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="assessmentセクション">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="AssessmentTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="5"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="todoセクション">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="TodoTextBox"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Margin="5"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="10">
            <Button Name="SaveButton" Content="保存" 
                    Width="80" Height="30" Margin="5"
                    Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="キャンセル" 
                    Width="80" Height="30" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>