<Window x:Class="VoiceRecorder.DictionaryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="補正辞書編集" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="補正辞書編集" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="音声認識の補正ルールを編集できます。「読み→変換後」の形式で1行ずつ記述してください。" 
                       TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- 辞書内容編集エリア -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="DictionaryTextBox"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas, 'Courier New', monospace"
                         FontSize="12"
                         Padding="10"
                         BorderThickness="0"
                         Background="White"/>
            </ScrollViewer>
        </Border>

        <!-- 使用方法の説明 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="使用方法:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="• 1行につき1つの変換ルールを記述してください" Margin="10,0,0,2"/>
            <TextBlock Text="• 形式: 読み→変換後（例: しょうかいじょう→紹介状）" Margin="10,0,0,2"/>
            <TextBlock Text="• 変更は保存ボタンを押すまで反映されません" Margin="10,0,0,2"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="保存" Width="80" Height="30" Margin="0,0,10,0"
                    Click="SaveButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="キャンセル" Width="80" Height="30"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 